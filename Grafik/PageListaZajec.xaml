<Page x:Class="Grafik.PageListaZajec"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Grafik"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PageListaZajec">

    <Page.DataContext>
        <local:PageListaZajecViewModel/>
    </Page.DataContext>
    <Grid>
        <DataGrid ItemsSource="{Binding ListaZajecp}" x:Name="dataGridZajecia" AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-7.083,0.385">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nazwa zajęć" Binding="{Binding Path=nazwaZajec}"/>
                <DataGridTextColumn  Header="Ilość miejsc" Binding="{Binding Path=limitOsob}"/>
              
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
